<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10sp"
    android:orientation="horizontal">

    <include
        android:id="@+id/image_part"
        layout="@layout/image_card"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="10sp" />

    <ImageView
        android:id="@+id/right_bubble_flag"
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:layout_marginTop="10sp"
        android:layout_toStartOf="@id/image_part"
        android:src="@drawable/ic_right_flag" />

    <include
        layout="@layout/text_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_toStartOf="@id/right_bubble_flag" />


</RelativeLayout>
