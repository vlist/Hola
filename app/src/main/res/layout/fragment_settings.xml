<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/user_profile_image"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_margin="20sp"
        android:contentDescription="@string/user_profile_image"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10sp"

                android:text="@string/username"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/username_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:text="@string/attr_placeholder"
                android:textColor="@color/textColorPrimary"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10sp"

                android:text="@string/email"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/email_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:text="@string/attr_placeholder"
                android:textColor="@color/textColorPrimary"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:text="@string/phone_number"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/phone_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:text="@string/attr_placeholder"
                android:textColor="@color/textColorPrimary"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10sp"

                android:text="@string/gender"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/gender_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:text="@string/attr_placeholder"
                android:textColor="@color/textColorPrimary"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10sp"

                android:text="@string/description"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/description_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:text="@string/attr_placeholder"
                android:textColor="@color/textColorPrimary"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.hola.Button"
            android:id="@+id/setting_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35sp"
            android:layout_marginVertical="10sp"
            android:text="@string/button_finish" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.hola.Button"
            android:id="@+id/setting_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35sp"
            android:layout_marginVertical="10sp"
            android:text="@string/button_cancel" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/setting_logout"
            style="@style/Widget.hola.AlertButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35sp"
            android:layout_marginVertical="10sp"
            android:text="@string/button_logout"/>

    </LinearLayout>
</LinearLayout>